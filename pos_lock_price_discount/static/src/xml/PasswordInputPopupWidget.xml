<?xml version="1.0" encoding="UTF-8"?>
<templates id="pos_orders_reprint_template" inherit_id="point_of_sale.template" xml:space="preserve">

    <t t-name="PasswordInputPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-confirm">
                <p class="title" style="background-color: rgb(110,200,155); color: #fff;">Password</p>

                		<div class="body">
		     				<div class='div-container'>
		     					<input type="password" class="input-field" name="password" autocomplete="off" style='margin-top: 15px;'></input>

		                    </div>
		                 </div>

                <div class="footer" style="background-color: rgb(110,200,155); color: #fff;">
                    <div class="button cancel" style="background-color: #0075AC; color: #fff;">
                        Cancel
                    </div>
                    <div class="button confirm" style="background-color: #0075AC; color: #fff;">
                        Confirm
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="DiscountTypePopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-confirm">
                <p class="title" style="background-color: rgb(110,200,155); color: #fff;">Discount Type</p>

                		<div class="body">
		     				<div class='div-container'>
                                <select class="form-control" name="discount_type"  id="discount_type">
                                    <option value="percentage" selected="true">Percentage</option>
                                    <option value="fixed" >Fixed</option>
                                </select>

		                    </div>
		                 </div>

                <div class="footer" style="background-color: rgb(110,200,155); color: #fff;">
                    <div class="button cancel" style="background-color: #0075AC; color: #fff;">
                        Cancel
                    </div>
                    <div class="button confirm" style="background-color: #0075AC; color: #fff;">
                        Confirm
                    </div>
                </div>
            </div>
        </div>
    </t>


</templates>