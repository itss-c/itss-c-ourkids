                                        <field name="subtotal_session" widget="gauge"
                                               style="width:50px;height:90px;cursor:pointer;"
                                               options="{'max_field': 'subtotal_session'}">Subtotal
                                        </field>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
